<div class="con text-center">
    <h3>Searching for {{q}} at page {{page}}</h3>

    <table class="center">
        {{#if data}}
        <tr>
            <th>APP ID</th>
            <th>Name</th>
            <th>Category</th>
            <th>Rating</th>
            <th>No. of installs</th>
        </tr>
            {{#each data}}
            <tr>
                <td>{{this.app_id}}</td>
                <td>{{this.name}}</td>
                <td>{{this.category}}</td>
                <td>{{this.rating}}</td>
                <td>{{this.installs}}</td>
            </tr>
            {{/each}}
        {{else}}
            <h1>You have returned no results!</h1>
        {{/if}}
    </table>
    <div class="con margin">
        {{#if prevbtn}}
        <form class="inline-block" action="/search" method="get">
            <input type="hidden" name="q" value="{{q}}">
            <button type="submit" name="offset" value="{{prevOffset}}">Prev</button>
        </form>
        {{/if}}
        {{#if data}}
        <form class="inline-block" action="/search" method="get">
            <input type="hidden" name="q" value="{{q}}">
            <button type="submit" name="offset" value="{{nextOffset}}">Next</button>
        </form>
        {{/if}}
    </div>
</div>